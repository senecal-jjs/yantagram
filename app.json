{
  "expo": {
    "name": "yantagram",
    "slug": "yantagram",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "yantagram",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yantagram.yantagram",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to create a peripheral device",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to create a peripheral device",
        "UIBackgroundModes": [
          "bluetooth-central",
          "bluetooth-peripheral"
        ],
        "NSCameraUsageDescription": "Yantagram uses the camera to scan QR codes to verify peers.",
        "NSPhotoLibraryUsageDescription": "Yantagram lets you pick images from your photo library to share with nearby peers.",
        "NSMicrophoneUsageDescription": "Yantagram uses the microphone to record voice notes that relay across the mesh.",
        "NSLocationWhenInUseUsageDescription": "Yantagram uses your approximate location to compute local geohash channels for optional public chats. Exact GPS is never shared.",
        "UILaunchStoryboardName": "LaunchScreen",
        "UIRequiresFullScreen": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_ADVERTISE",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.yantagram.yantagram"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-sqlite",
      "expo-secure-store",
      "expo-asset",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "ble": {
        "outgoingMessageRetryIntervalSeconds": 30,
        "mtuLimitBytes": 512,
        "defaultFragmentSizeBytes": 469
      },
      "router": {},
      "eas": {
        "projectId": "796de80a-5582-46fb-94ef-4ef656b5c02d"
      }
    },
    "owner": "bitcli"
  }
}
